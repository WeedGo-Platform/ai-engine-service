# WeedGo AI Engine Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5434
DB_NAME=ai_engine
DB_USER=weedgo
DB_PASSWORD=${DB_PASSWORD}  # REQUIRED: Set in environment or .env file

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=  # Set if Redis requires authentication

# Model Configuration
MODELS_DIR=/path/to/models
MODEL_N_GPU_LAYERS=0  # Set > 0 for GPU acceleration
MODEL_N_THREADS=8
MODEL_TEMPERATURE=0.7
MODEL_MAX_TOKENS=512

# API Security
AI_ENGINE_API_KEY=  # Set for API authentication
JWT_SECRET=your-secret-key-here  # CHANGE THIS IN PRODUCTION
ENABLE_AUTH=false  # Set to true in production

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Service Configuration
AI_ENGINE_HOST=0.0.0.0
AI_ENGINE_PORT=8000
AI_ENGINE_DEBUG=false
LOG_LEVEL=INFO

# Vector Database (Milvus)
MILVUS_HOST=localhost
MILVUS_PORT=19530

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme  # CHANGE THIS IN PRODUCTION

# Feature Flags
ENABLE_CACHING=true
ENABLE_METRICS=true
ENABLE_AB_TESTING=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Business Configuration
MIN_AGE=19  # Legal age in Ontario
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr,es,pt,ar,zh