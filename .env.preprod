# Pre-PROD Environment (Vercel + Railway)
# Branch: release

# Environment
ENVIRONMENT=preprod
NODE_ENV=production

# Database (Railway PostgreSQL)
DATABASE_URL=postgresql://postgres:PASSWORD@xxx.railway.app:5432/railway
DB_HOST=xxx.railway.app
DB_PORT=5432
DB_NAME=railway
DB_USER=postgres
DB_PASSWORD=xxx
DB_SSL=false

# Redis (Railway)
REDIS_URL=redis://default:PASSWORD@xxx.railway.internal:6379
REDIS_HOST=xxx.railway.internal
REDIS_PORT=6379

# Storage (Railway Volumes)
STORAGE_PATH=/app/models
STORAGE_PROVIDER=local

# API
API_URL=https://weedgo-preprod.up.railway.app
API_PORT=5024
CORS_ORIGINS=https://preprod-admin.yourco.com,https://preprod-commerce.yourco.com

# Auth
JWT_SECRET_KEY=your-super-secret-jwt-key-preprod-32chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Features
ENABLE_VOICE_CLONING=true
ENABLE_RAG=true
ENABLE_ANALYTICS=true

# Monitoring
SENTRY_DSN=https://xxx@sentry.io/preprod
LOG_LEVEL=info

# Railway-specific
RAILWAY_ENVIRONMENT=preprod
RAILWAY_VOLUME_MOUNT_PATH=/app/models
