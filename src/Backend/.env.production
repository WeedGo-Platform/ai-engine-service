# Production Environment Configuration
# AI Engine Service

# Database
DATABASE_URL=postgresql://weedgo:${DB_PASSWORD}@${DB_HOST}:5432/ai_engine
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_engine
DB_USER=weedgo
# DB_PASSWORD should be set via environment variable

# API Service
API_HOST=0.0.0.0
API_PORT=5024
API_BASE_URL=https://api.weedgo.com
ENVIRONMENT=production

# Security
SECRET_KEY=${SECRET_KEY}
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=https://weedgo.com,https://www.weedgo.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Redis Cache
REDIS_URL=redis://${REDIS_HOST}:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
CACHE_TTL=300

# AI Models
LLAMA_MODEL_PATH=/opt/models/llama-2-7b-chat.gguf
WHISPER_MODEL_PATH=/opt/models/whisper-base.pt
PIPER_MODEL_PATH=/opt/models/piper-en-us.onnx

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/weedgo/ai-engine.log

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health
READINESS_PATH=/ready

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# Email Service
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_FROM=noreply@weedgo.com

# Payment Gateway
STRIPE_PUBLIC_KEY=${STRIPE_PUBLIC_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Analytics
GOOGLE_ANALYTICS_ID=${GA_ID}
MIXPANEL_TOKEN=${MIXPANEL_TOKEN}

# Feature Flags
FEATURE_AI_CHAT=true
FEATURE_VOICE_INPUT=true
FEATURE_RECOMMENDATIONS=true
FEATURE_VIRTUAL_BUDTENDER=true

# Multi-tenancy
DEFAULT_TENANT_ID=pot-palace
ENABLE_MULTI_TENANT=true