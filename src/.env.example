# V5 AI Engine Environment Configuration
# Copy to .env and configure for your environment

# === REQUIRED SECURITY SETTINGS ===
DB_PASSWORD=your_secure_password_here
JWT_SECRET=your_32_char_jwt_secret_here_minimum
API_KEY_SALT=your_api_key_salt_here

# === DATABASE CONFIGURATION ===
DB_HOST=localhost
DB_PORT=5434
DB_NAME=ai_engine
DB_USER=weedgo
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# === API GATEWAY ===
API_GATEWAY_URL=http://localhost:8000
API_GATEWAY_TIMEOUT=30
API_RETRY_ATTEMPTS=3

# === REDIS (Caching & Rate Limiting) ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# === SERVICE CONFIGURATION ===
V5_HOST=0.0.0.0
V5_PORT=5025
DEBUG=false
LOG_LEVEL=INFO

# === AUTHENTICATION ===
ENABLE_AUTH=true
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
API_KEY_ENABLED=true

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# === CORS ===
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# === MODEL CONFIGURATION ===
MODEL_PATH=models/multilingual/qwen2.5-0.5b-instruct-q4_k_m.gguf
MODEL_CONTEXT_SIZE=2048
MODEL_MAX_TOKENS=500
MODEL_TEMPERATURE=0.7
MODEL_N_GPU_LAYERS=0
MODEL_N_THREADS=8

# === FEATURE FLAGS ===
ENABLE_STREAMING=true
ENABLE_FUNCTION_SCHEMAS=true
ENABLE_TOOL_VALIDATION=true
ENABLE_RESULT_CACHING=true
ENABLE_COST_TRACKING=true
ENABLE_MEMORY_PERSISTENCE=true

# === OBSERVABILITY ===
OTEL_ENABLED=false
OTEL_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=v5-ai-engine
METRICS_ENABLED=true
METRICS_PORT=9090

# === BUSINESS LOGIC ===
MIN_AGE=21
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr,es
MAX_ORDER_ITEMS=50
MAX_MESSAGE_LENGTH=1000

# === SECURITY HEADERS ===
ENABLE_SECURITY_HEADERS=true
CSP_POLICY=default-src 'self'
HSTS_MAX_AGE=31536000