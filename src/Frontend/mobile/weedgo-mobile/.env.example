# API Configuration
# Copy this file to .env.local and update with your settings

# Backend API URL - Choose based on your testing environment:
# For iOS Simulator: http://localhost:5024 or http://127.0.0.1:5024
# For Android Emulator: http://10.0.2.2:5024
# For Physical Device: http://<YOUR_MACHINE_IP>:5024
# To find your machine's IP: ifconfig | grep "inet " | grep -v 127.0.0.1
EXPO_PUBLIC_API_URL=http://10.0.0.29:5024

# WebSocket URL (usually same host as API)
EXPO_PUBLIC_WS_URL=ws://10.0.0.29:5024

# Voice WebSocket URL (v2 endpoint)
EXPO_PUBLIC_VOICE_WS_URL=ws://10.0.0.29:5024/api/v2/ai-conversation/ws

# Tenant Configuration
EXPO_PUBLIC_TENANT_ID=ce2d57bc-b3ba-4801-b229-889a9fe9626d

# API Timeout (milliseconds)
EXPO_PUBLIC_API_TIMEOUT=30000

# Environment
EXPO_PUBLIC_ENV=development

# Features
EXPO_PUBLIC_ENABLE_VAD=true
EXPO_PUBLIC_ENABLE_WAKE_WORD=true
EXPO_PUBLIC_ENABLE_AUTO_STOP=true
