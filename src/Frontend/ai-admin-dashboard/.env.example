# ===========================================
# WeedGo AI Admin Dashboard Configuration
# ===========================================
# Copy this file to .env and customize as needed

# ===========================================
# API Configuration
# ===========================================
VITE_API_URL=http://localhost:5024
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# ===========================================
# Authentication Configuration
# ===========================================
# Token Refresh Settings
VITE_AUTO_REFRESH_ENABLED=true
VITE_TOKEN_REFRESH_BUFFER=300
VITE_TOKEN_REFRESH_MAX_RETRIES=3
VITE_TOKEN_REFRESH_RETRY_DELAY=1000

# Session Settings
VITE_SESSION_TIMEOUT=0
VITE_CHECK_SESSION_ON_FOCUS=true
VITE_SESSION_CHECK_INTERVAL=0

# Storage Settings
VITE_AUTH_STORAGE_PREFIX=weedgo_auth_
VITE_USE_SESSION_STORAGE=false

# Redirect URLs
VITE_AFTER_LOGIN_URL=/dashboard
VITE_AFTER_LOGOUT_URL=/login
VITE_UNAUTHORIZED_URL=/login

# ===========================================
# UI Configuration
# ===========================================
# Notification Timeouts (milliseconds)
VITE_NOTIFICATION_SUCCESS_TIMEOUT=3000
VITE_NOTIFICATION_ERROR_TIMEOUT=5000
VITE_NOTIFICATION_INFO_TIMEOUT=4000
VITE_NOTIFICATION_WARNING_TIMEOUT=4000

# Debounce Delays (milliseconds)
VITE_DEBOUNCE_SEARCH=300
VITE_DEBOUNCE_INPUT=500
VITE_DEBOUNCE_RESIZE=200

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_PAGE_SIZE_OPTIONS=10,20,50,100

# Animation Delays (milliseconds)
VITE_MODAL_ANIMATION_DELAY=200
VITE_TRANSITION_DURATION=300

# ===========================================
# Feature Flags
# ===========================================
VITE_FEATURE_BARCODE_SCANNING=true
VITE_FEATURE_QUICK_INTAKE=true
VITE_FEATURE_BULK_OPERATIONS=true
VITE_FEATURE_ADVANCED_SEARCH=true
VITE_FEATURE_EXPORT=true
VITE_FEATURE_IMPORT=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_RECOMMENDATIONS=true
VITE_FEATURE_PROMOTIONS=true
VITE_FEATURE_MULTI_STORE=true

# ===========================================
# Business Rules
# ===========================================
# Store Limits by Subscription Tier
VITE_STORE_LIMIT_COMMUNITY=1
VITE_STORE_LIMIT_SMALL=5
VITE_STORE_LIMIT_PROFESSIONAL=12
VITE_STORE_LIMIT_ENTERPRISE=999

# Inventory Thresholds
VITE_LOW_STOCK_THRESHOLD=10
VITE_CRITICAL_STOCK_THRESHOLD=5
VITE_MAX_ORDER_QUANTITY=9999

# User Limits
VITE_MAX_USERS_PER_TENANT=100
VITE_MAX_USERS_PER_STORE=50

# ===========================================
# POS Configuration
# ===========================================
VITE_SCANNER_TEST_DELAY=2000
VITE_PAYMENT_PROCESSING_DELAY=1500
VITE_RECEIPT_PRINT_DELAY=1000
VITE_POS_SEARCH_DEBOUNCE=300

# ===========================================
# Upload Configuration
# ===========================================
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
VITE_ALLOWED_DOCUMENT_TYPES=application/pdf,text/csv,application/vnd.ms-excel

# ===========================================
# Validation Rules
# ===========================================
# Password Requirements
VITE_MIN_PASSWORD_LENGTH=8
VITE_MAX_PASSWORD_LENGTH=128
VITE_REQUIRE_UPPERCASE=true
VITE_REQUIRE_LOWERCASE=true
VITE_REQUIRE_NUMBERS=true
VITE_REQUIRE_SPECIAL_CHARS=true

# Field Length Limits
VITE_MAX_NAME_LENGTH=100
VITE_MAX_DESCRIPTION_LENGTH=500
VITE_MAX_CODE_LENGTH=50

# ===========================================
# External Services (Optional)
# ===========================================
VITE_GOOGLE_MAPS_API_KEY=
VITE_STRIPE_PUBLIC_KEY=
VITE_SENTRY_DSN=

# ===========================================
# Development Settings
# ===========================================
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_LOGGING=true
VITE_LOG_LEVEL=info
VITE_USE_MOCK_DATA=false